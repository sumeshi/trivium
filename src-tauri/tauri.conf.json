{
  "package": {
    "productName": "Trivium",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "createDir": true,
        "removeFile": true,
        "removeDir": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "identifier": "com.trivium.app",
      "windows": {
        "webviewInstallMode": {
          "type": "downloadBootstrapper",
          "silent": true
        }
      }
    },
    "windows": [
      {
        "title": "Trivium",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}